<%= form_for @shortUrl do |f| %>
<div class="form-group">
  <%= f.label :url %>
  <%= f.text_field :url %>
  <% if @shortUrl.errors.full_messages_for(:url).length > 0 %>
  <div class="error">
    <% @shortUrl.errors.full_messages_for(:url).each do |msg| %>
    <p><%= msg %></p>
    <% end %>
  </div>
  <% end %>
</div>
<div class="form-group">
  <%= f.submit %>
</div>
<% end %>